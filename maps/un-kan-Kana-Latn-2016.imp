stage {

  # RULES
  # to cover diacritic and vowel less consonants
  sub "ಕ", "k", after: characters_set1
  sub "ಖ", "kh", after: characters_set1
  sub "ಗ", "g", after: characters_set1
  sub "ಘ", "gh", after: characters_set1
